{
    "name": "jbff",
    "version": "1.0.0",
    "description": "Jottax BFF",
    "main": "server.js",
    "author": "jottaxwds",
    "license": "ISC",
    "proxy": "http://localhost:9001",
    "scripts": {
        "test": "npm run test:front && npm run test:server",
        "start:dev": "yarn server & yarn client",
        "build": "webpack --config webpack.prod.js --mode production",
        "server": "nodemon src/server/server.js",
        "client": "webpack-dev-server --env.CLIENT_PORT=9000 --env.CLIENT_HOST=0.0.0.0 --mode development --open --hot",
        "test:front": "jest --config test/jest.config.client.js --silent",
        "test:front:coverage": "npm run test:front -- --coverage",
        "test:server": "jest --config test/jest.config.server.js --silent",
        "test:server:coverage": "npm run test:server -- --coverage",
        "serve": "NODE_ENV=production node-env-run src/server/server.js --exec nodemon | http-server ./dist"
    },
    "dependencies": {
        "@babel/plugin-transform-runtime": "^7.7.4",
        "@emotion/core": "^10.0.21",
        "@emotion/styled": "^10.0.17",
        "@testing-library/react-hooks": "^3.2.1",
        "axios": "^0.19.0",
        "body-parser": "^1.18.3",
        "dotenv": "^8.2.0",
        "express": "^4.16.4",
        "http-server": "^0.12.0",
        "node-env-run": "^3.0.2",
        "polished": "^3.4.2",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-router-dom": "^5.1.2",
        "react-test-renderer": "^16.12.0"
    },
    "devDependencies": {
        "@babel/core": "^7.7.0",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-react": "^7.7.0",
        "@testing-library/react": "^9.3.2",
        "babel-loader": "^8.0.6",
        "babel-plugin-emotion": "^10.0.21",
        "css-loader": "^3.2.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "jest-emotion": "^10.0.17",
        "node-sass": "^7.0.0",
        "nodemon": "^1.18.10",
        "portfinder-sync": "^0.0.2",
        "sass-loader": "^8.0.0",
        "style-loader": "^1.0.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0"
    }
}
